ALGORITHM number_of_characters
VAR
  point : CHAR;
  str : STRING[] := " ";
  countNumberOfCharacters : INTEGER;
BEGIN
  IF (str <> " ") THEN
    Read(str);
    point := str[str.length-1];
    IF (point = '.') THEN
      countNumberOfCharacters := str.length;
      Write("The number of characters in this sentence is : "& countNumberOfCharacters );
    ELSE
      Write("Give the sentence and that it ends with (.)");
    END_IF
  ELSE
     Write("Give the sentence");
  END_IF
END